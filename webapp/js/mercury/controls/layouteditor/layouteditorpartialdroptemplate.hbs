<li class="ui-body-a drop-item ui-bar-{{#ifCond CONTROL_LAYOUT_EDITOR_ITEM_TYPE "===" "CONTROL_LAYOUT_EDITOR_ITEM_TYPE_GROUP"}}b{{else}}c{{/ifCond}}">
    <div style="width: 100%">
        <span {{#ifCond CONTROL_LAYOUT_EDITOR_ITEM_TYPE "===" "CONTROL_LAYOUT_EDITOR_ITEM_TYPE_GROUP"}}
                data-numcols="{{ CONTROL_LAYOUT_EDITOR_ITEM_NUMBER_OF_COLUMNS }}"
              {{/ifCond}}
              class="layouteditor-label {{ CONTROL_LAYOUT_EDITOR_ITEM_TYPE }}">
            {{ CONTROL_LAYOUT_EDITOR_ITEM_IDENTIFIER }}
        </span>
        <a href="#" class="ui-icon-pack ui-btn-right layouteditor-trash-button" data-role="button" data-icon="trash" data-iconpos="notext"></a>
    </div>
    {{#ifCond CONTROL_LAYOUT_EDITOR_ITEM_TYPE "===" "CONTROL_LAYOUT_EDITOR_ITEM_TYPE_GROUP"}}
        <ul class="ui-shadow-inset ui-body-a drop-area">
            {{#each CONTROL_LAYOUT_EDITOR_ITEM_CHILD_ITEMS }}
                {{partial "droppartial" this}}
            {{/each}}
        </ul>
    {{/ifCond}}
</li>